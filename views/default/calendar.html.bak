<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title></title>
    <link rel="stylesheet" href="{{=URL('static', 'bower_components/bootstrap/docs/assets/css/bootstrap.css')}}">
    <link rel="stylesheet" href="{{=URL('static', '/bower_components/bootstrap-calendar/css/calendar.css')}}">
    <script type="text/javascript" src="{{=URL('static','bower_components/jquery/jquery.min.js')}}"></script>
    <script type="text/javascript" src="{{=URL('static','bower_components/bootstrap/docs/assets/js/bootstrap.min.js')}}"></script>
    <script type="text/javascript" src="{{=URL('static','bower_components/underscore/underscore-min.js')}}"></script>
    <script type="text/javascript" src="{{=URL('static','bower_components/bootstrap-calendar/js/calendar.min.js')}}"></script>
    <script type="text/javascript" src="{{=URL('static','bower_components/moment/moment.js')}}"></script>

</head>
<body>
<div class="container">
    <div class="page-header">
        <h3>

        </h3>
    </div>
    <div class="btn-group">
        <button class="btn btn-primary" data-calendar-nav="prev"><< Prev</button>
        <button class="btn" data-calendar-nav="today">Today</button>
        <button class="btn btn-primary" data-calendar-nav="next">Next >></button>
    </div>
    <div class="btn-group">
        <button class="btn btn-warning" data-calendar-view="year">Year</button>
        <button class="btn btn-warning active" data-calendar-view="month">Month</button>
        <button class="btn btn-warning" data-calendar-view="week">Week</button>
        <button class="btn btn-warning" data-calendar-view="day">Day</button>
    </div>

    <div id="calendar"></div>

</div>

<div class="modal hide fade" id="events-modal">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Event</h3>
    </div>
    <div class="modal-body" style="height: 400px">
    </div>
    <div class="modal-footer">
        <a href="#" data-dismiss="modal" class="btn">Close</a>
    </div>
</div>

<script type="text/javascript">


    $(function () {
        var calendar = $("#calendar").calendar(
            {
                modal: "#events-modal",
                tmpl_path: "{{=URL('static','bower_components/bootstrap-calendar/tmpls/')}}",
                view: 'month',
                onAfterViewLoad: function (view) {
                    $('.page-header h3').text(this.getTitle());
                    $('.btn-group button').removeClass('active');
                    $('button[data-calendar-view="' + view + '"]').addClass('active');
                },
                events_source: [
                    {
                        "id": 293,
                        "title": "Event 1",
                        "url": "http://example.com",
                        "class": "event-important",
                        "start": 12039485678000, // Milliseconds
                        "end": 1234576967000 // Milliseconds
                    },
                    {
                        "id": 294,
                        "title": "Event 2",
                        "url": "http://example.com",
                        "class": "event-important",
                        "start": 11039485678000, // Milliseconds
                        "end": 1134576967000 // Milliseconds
                    },
                    {
                        "id": "548",
                        "title": "OSDG Hackathon",
                        "url": "http://www.facebook.com/",
                        "class": "event-special",
                        "start": "1447502400000",
                        "end":   "1447551696000"
                    }
                ]
            });
        $('.btn-group button[data-calendar-nav]').each(function () {
            var $this = $(this);
            $this.click(function () {
                calendar.navigate($this.data('calendar-nav'));
            });
        });

        $('.btn-group button[data-calendar-view]').each(function () {
            var $this = $(this);
            $this.click(function () {
                calendar.view($this.data('calendar-view'));
            });
        });
    });
</script>
</body>
</html>
